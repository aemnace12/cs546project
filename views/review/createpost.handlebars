<p id="error">{{error}}</p>

<form id="createpost-form" action="/review/createpost" method="POST">
    <label for="name">Location Name:</label>
    <input type="text" name="name" id="name">
    <label for="location">Location (city, state/region, country):</label>
    <input type="text" name="location" id="location">
    <label for="description">Description:</label>
    <input type="text" name="description" id="description">
    <button type="submit" name="submit_button" id="submit_button">Submit Post</button>
</form>