<h1>Profile Page</h1>

<section class="profile-section">
  <h1 class="page-title">Your Profile</h1>
  <div class="profile-info">
    <p><strong>User ID:</strong> {{userId}}</p>
    <p><strong>Name:</strong> {{firstName}} {{lastName}}</p>
    <p><strong>Favorite Place:</strong> {{favoritePlace}}</p>
    <p><strong>Bio:</strong> {{bio}}</p>
  </div>

  <div class="form-actions">
    <a href="/user/profile/edit" class="btn-primary">Edit Profile</a>
  </div>
</section>
<section class="reviews-section">
  <h2 class="section-title">{{userId}}’s Reviews</h2>
  {{#if reviews.length}}
    <ul class="leaderboard-list">
      {{#each reviews}}
        <li class="leaderboard-item">
          <p class="item-description">{{review}}</p>
          <p class="item-meta">
            <strong>{{locationName}}</strong> —
            Overall: {{overallRating}},
            Food: {{foodRating}},
            Safety: {{safetyRating}},
            Activity: {{activityRating}}
          </p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="not-found">You haven’t posted any reviews yet.</p>
  {{/if}}
</section>