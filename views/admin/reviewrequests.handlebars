<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{#if title}}{{title}}{{else}}Home{{/if}} - TripScore</title>
</head> <!-- formalities for html validation -->

<h1 class="page-title">User Review Requests</h1>
<p id="error" class="error-message" hidden></p>

{{#if posts.length}}
  <div class="request-list">
    {{#each posts}}
      <div class="request-item">
        <div class="request-info">
          <h2 class="request-title">{{this.name}}</h2>
          <p class="request-description">{{this.description}}</p>
          <p class="request-meta">
            {{this.city}}, {{this.region}}, {{this.country}} &bull; {{this.continent}}
          </p>
          <div class="request-ratings">
            <span>Overall: {{this.overallRating}}</span>
            <span>Food: {{this.foodRating}}</span>
            <span>Safety: {{this.safetyRating}}</span>
            <span>Activity: {{this.activityRating}}</span>
          </div>
        </div>
        <div class="request-actions">
          <form action="/admin/reviewrequests" method="POST" class="approve-form">
            <input type="hidden" name="locationId" value="{{this._id}}">
            <button type="submit" class="btn-primary">Approve</button>
          </form>
        </div>
      </div>{{/each}}
  </div>
{{else}}
  <p class="not-found">
    Weâ€™re sorry, but there are no pending review requests.
  </p>
{{/if}}

<script src="/public/js/form_validation.js"></script>