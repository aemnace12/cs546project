<!DOCTYPE html>
<html lang="en">
<head>
  <title>{{#if title}}{{title}}{{else}}Home{{/if}} - TripScore</title>
</head> <!-- formalities for html validation -->
<section class="age-verification">
  <h1 class="page-title">Welcome to TripScore</h1>
  <p>To enter this website, you must be at least 14 years old.</p>

  <form
    id="age-form"
    class="form"
    method="POST"
    action="/verifyage"
  >
    <div class="form-group">
      <label for="age">Enter your age:</label>
      <input type="number" name="age" id="age" min="1" max="130" placeholder="e.g. 25">
      <div id="age-error" class="error-message"></div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn-primary">Enter Site</button>
    </div>
  </form>
</section>

<script src="/public/js/ageValidation.js"></script>